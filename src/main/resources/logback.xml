<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %highlight(%-5level) [%thread] [requestId=%X{requestId:-N/A}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger específico de tu app -->
    <logger name="com.ingsisteam.snippetservice2025" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Logger raíz (resto de librerías) -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
